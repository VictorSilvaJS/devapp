{
  "name": "User",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "ID único do usuário"
    },
    "nome": {
      "type": "string",
      "description": "Nome completo do usuário"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Email do usuário"
    },
    "senha": {
      "type": "string",
      "description": "Senha criptografada do usuário"
    },
    "perfil": {
      "type": "string",
      "enum": ["admin", "colaborador", "cliente"],
      "default": "cliente",
      "description": "Perfil de acesso do usuário"
    },
    "regiao": {
      "type": "string",
      "description": "Região de trabalho (para colaboradores)"
    },
    "produtor_id": {
      "type": "string",
      "description": "ID do produtor vinculado (para clientes)"
    },
    "telefone": {
      "type": "string",
      "description": "Telefone de contato do usuário"
    },
    "ativo": {
      "type": "boolean",
      "default": true,
      "description": "Se o usuário está ativo no sistema"
    },
    "data_cadastro": {
      "type": "string",
      "format": "date-time",
      "description": "Data de cadastro do usuário"
    }
  },
  "required": ["nome", "email", "senha", "perfil"]
}
