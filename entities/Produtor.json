{
  "name": "Produtor",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "ID único do produtor"
    },
    "nome": {
      "type": "string",
      "description": "Nome completo do produtor"
    },
    "fazenda": {
      "type": "string",
      "description": "Nome da fazenda"
    },
    "area_total": {
      "type": "number",
      "description": "Área total em hectares"
    },
    "cultura_atual": {
      "type": "string",
      "description": "Cultura atualmente plantada"
    },
    "telefone": {
      "type": "string",
      "description": "Telefone de contato"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Email do produtor"
    },
    "endereco": {
      "type": "string",
      "description": "Endereço completo"
    },
    "cidade": {
      "type": "string",
      "description": "Cidade"
    },
    "estado": {
      "type": "string",
      "description": "Estado"
    },
    "regiao": {
      "type": "string",
      "description": "Região administrativa (ex: Sul, Centro-Oeste, Norte, MT, SP, PE)"
    },
    "microregiao": {
      "type": "string",
      "description": "Microrregião específica dentro da região"
    },
    "cep": {
      "type": "string",
      "description": "CEP"
    },
    "ultima_analise": {
      "type": "string",
      "format": "date",
      "description": "Data da última análise de solo"
    },
    "status": {
      "type": "string",
      "enum": ["ativo", "inativo", "pendente"],
      "default": "ativo",
      "description": "Status do produtor"
    },
    "data_cadastro": {
      "type": "string",
      "format": "date-time",
      "description": "Data de cadastro do produtor"
    }
  },
  "required": ["nome", "fazenda", "area_total"]
}
